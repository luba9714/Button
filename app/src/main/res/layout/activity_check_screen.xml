<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"

android:background="@drawable/background1"
tools:context=".CheckScreen">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="What is the name of your wifi?"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:typeface="serif"
        android:textSize="17dp"
        android:textColor="#FFFFFF"
        android:shadowColor="#1B1919"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="6"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"


    />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:boxStrokeColor="@color/black"
        android:layout_marginBottom="10dp"

        android:hint="WIFI"


        android:elevation="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="3dp"
        android:textColorHint="#9A4B32">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:text=""
            android:gravity="center"
            android:background="@drawable/border3"
            android:textColor="#000000"
            android:inputType="text"
            android:textSize="15dp" />


    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="What is the magic word?"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:typeface="serif"
        android:textColor="#FFFFFF"
        android:shadowColor="#1B1919"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="6"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"


        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/audio"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="say the word"
        android:backgroundTint="#BA0D24"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginBottom="10dp"




        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="and finally, \nclick here to check \nif you complete all the conditions"
        android:textAllCaps="true"
        android:typeface="serif"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:textStyle="bold"
        android:shadowColor="#1B1919"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="6"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"


        />


<com.google.android.material.button.MaterialButton
    android:id="@+id/button"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:text="check"
    android:backgroundTint="#BA0D24"

    android:textStyle="bold"
    android:textSize="12dp"
    />


</LinearLayout>